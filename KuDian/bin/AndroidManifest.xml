<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xxn.kudian"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <!-- ###################声明SDK使用的相关权限###################### -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.REORDER_TASKS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BAIDU_LOCATION_SERVICE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.xxn.kudian.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >

        <!-- 开发者申请的key -->
        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="zwZtKzHG44ffDGxUUk5GUyLlydgQtEIS" />

        <activity
            android:name="com.xxn.kudian.ui.GuideActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 注册或登录页面 -->
        <activity
            android:name="com.xxn.kudian.ui.LoginOrRegisterActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 首次安装运行页面 -->
        <activity
            android:name="com.xxn.kudian.ui.GuidePagerActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 主页面 -->
        <activity
            android:name="com.xxn.kudian.ui.MainActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 登录页面 -->
        <activity
            android:name="com.xxn.kudian.ui.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xxn.kudian.ui.LoginOrRegisterActivity" />

            <intent-filter>
                <action android:name="user_login" />
            </intent-filter>
        </activity>

        <!-- 注册页面 -->
        <activity
            android:name="com.xxn.kudian.ui.RegisterActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.xxn.kudian.ui.LoginOrRegisterActivity" />
        </activity>

        <!-- 忘记密码页面 -->
        <activity
            android:name="com.xxn.kudian.ui.ForgetPassActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 重置密码页面 -->
        <activity
            android:name="com.xxn.kudian.ui.ResetPassActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 侧滑页面 -->
        <activity
            android:name="com.xxn.kudian.ui.SideslipActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SidebarDialogStyle"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 商家列表页面 -->
        <activity
            android:name="com.xxn.kudian.ui.MerchantListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 地图页面 -->
        <activity
            android:name="com.xxn.kudian.ui.MapActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 声明service组件,每个app拥有自己单独的定位service -->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote" />
        <!-- 定位service -->


        <!-- 商家详情页面 -->
        <activity
            android:name="com.xxn.kudian.ui.MerchantInfoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 我的收藏页面 -->
        <activity
            android:name="com.xxn.kudian.ui.MyCollectActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 最新商品页面 -->
        <activity
            android:name="com.xxn.kudian.ui.NewGoodsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 排行榜页面 -->
        <activity
            android:name="com.xxn.kudian.ui.IntegralBoardActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 酷易点推荐页面 -->
        <activity
            android:name="com.xxn.kudian.ui.RecommendActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 个人信息页面 -->
        <activity
            android:name="com.xxn.kudian.ui.PersonInfoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 修改个人信息页面 -->
        <activity
            android:name="com.xxn.kudian.ui.ModificationInfoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>

        <!-- 分享页面 -->
        <activity
            android:name="com.xxn.kudian.ui.ShareActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" >
        </activity>
    </application>

</manifest>