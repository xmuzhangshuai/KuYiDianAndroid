<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/day_recommend_dot_space" >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/kuyidian_logo" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_login_radius"
            android:drawableLeft="@drawable/icon_phone_gray"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_recommend_user_font" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/autncode"
                android:layout_width="0dp"
                android:layout_height="@dimen/register_height"
                android:layout_weight="2"
                android:background="@drawable/shape_login_radius"
                android:drawableLeft="@drawable/icon_authcode_gray"
                android:drawablePadding="10dp"
                android:hint="验证码"
                android:inputType="number"
                android:maxLength="6"
                android:maxLines="1"
                android:paddingLeft="@dimen/personal_timecapsule_padding"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/day_recommend_user_font" />

            <Button
                android:id="@+id/get_authcode"
                android:layout_width="0dp"
                android:layout_height="@dimen/register_height"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/sel_login_btn_bg"
                android:text="获取验证码"
                android:textColor="@color/sel_getauthcode_font_color"
                android:textSize="@dimen/day_recommend_user_font" />
        </LinearLayout>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_login_radius"
            android:drawableLeft="@drawable/icon_pass_gray"
            android:drawablePadding="10dp"
            android:hint="密码,(6到18位)"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_recommend_user_font" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_login_radius"
            android:drawableLeft="@drawable/icon_pass_gray"
            android:drawablePadding="10dp"
            android:hint="密码,(6到18位)"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:paddingLeft="@dimen/personal_timecapsule_padding"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_recommend_user_font" />

        <Button
            android:id="@+id/sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/sel_login_btn_bg"
            android:text="@string/ok"
            android:textColor="@color/sel_getauthcode_font_color"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:padding="@dimen/day_recommend_dot_space" >

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:text="其他方式快速注册"
                android:textColor="#999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv"
                android:background="#999" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv"
                android:background="#999" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <ImageView
                android:id="@+id/loginwechat"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:src="@drawable/sel_login_wechat" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>