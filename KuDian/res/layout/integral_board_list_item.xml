<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/integral_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/integral_board_image"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="4"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/integral_board_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/integral_sort"
        android:src="@drawable/umeng_socialize_qq_on" />

    <TextView
        android:id="@+id/integral_board_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/integral_board_image"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/integral_board_image"
        android:text="厦门大学" />

    <TextView
        android:id="@+id/integral_board_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/integral_board_college"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/integral_board_college"
        android:text="积分:" />

    <TextView
        android:id="@+id/integral_board_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/integral_board_college"
        android:layout_toRightOf="@+id/integral_board_text"
        android:text="1000" />

    <TextView
        android:id="@+id/integral_board_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/integral_board_college"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/integral_board_image"
        android:text="刘云"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/integral_board_college"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/integral_board_integral"
        android:text="等级:" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/integral_board_college"
        android:layout_toRightOf="@+id/level_text"
        android:text="50" />

</RelativeLayout>