<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/map_text" >

    <ImageView
        android:id="@+id/map_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/umeng_socialize_qq_on" />

    <TextView
        android:id="@+id/map_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/map_image"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/map_image"
        android:text="肯德基"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/map_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_name"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/map_image"
        android:text="距您1000米"
        android:textSize="17sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/map_distance"
        android:layout_marginRight="10dp"
        android:src="@drawable/forward" />

</RelativeLayout>